  <div class="py-12 px-12 bg-white rounded-2xl shadow-xl z-20">
    <div>
      <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Crea un nuevo contacto</h1>
    </div>
    <div class="space-y-4">
  
      <%= form.label :first_name, class:"hidden" %>
      <%= form.text_field :first_name, class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none", placeholder:"Nombre"  %>
      
      <%= form.label :last_name, class:"hidden" %>
      <%= form.text_field :last_name, class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none", placeholder:"Apellido" %>

      <%= form.label :email, class:"hidden" %>
      <%= form.text_field :email, class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none", placeholder:"Email" %>

      <%= form.label :phone, class:"hidden" %>
      <%= form.text_field :phone, class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none", placeholder:"TelÃ©fono" %>

      <%= form.label :instagrargm, class:"hidden" %>
      <%= form.text_field :instagrargm, class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none", placeholder:"Instagram" %>
    </div>
    <div class="text-center mt-6">
      <%= form.submit class:"py-3 w-64 text-xl text-white bg-purple-400 rounded-2xl" %>
    </div>
    <div class="text-center">
      <%= link_to 'Mostrar', @friend %> |
      <%= link_to 'Volver', friends_path %>
    </div>

  </div>
  <div class="w-40 h-40 absolute bg-purple-300 rounded-full top-0 right-12 hidden md:block"></div>
  <div class="w-20 h-40 absolute bg-purple-300 rounded-full bottom-20 left-10 transform rotate-45 hidden md:block"></div>
</div>
<% end %>
