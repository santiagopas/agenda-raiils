<% if user_signed_in? %>

<h1 class="  text-lg text-center font-bold m-5 tableContainer text-2xl font-bold text-transparent md:text-3xl bg-clip-text bg-gradient-to-r from-indigo-200 via-indigo-500 to-indigo-900 mb-16 text-center"><i class="far fa-bookmark"></i> Mi agenda </h1>
<table class="table rounded-t-lg m-5 w-5/6 mx-auto text-gray-100 bg-gradient-to-r from-indigo-500 to-blue-500 ">
  <tr class="text-left border-b-2 border-indigo-300">
    <th class="px-4 py-7">Nombre</th>
    <th class="px-4 py-7">Email</th>
    <th class="px-4 py-7">Teléfono</th>
    <th class="px-4 py-7">Instagram</th>
    <%
=begin%>
 <th class="px-4 py-7">Id Usuario</th> 
<%
=end%>
    <th class="px-4 py-7 text-center"><i class="fas fa-eye"></i></th>
    <th class="px-4 py-7 text-center"><i class="far fa-edit"></i></th>
    <th class="px-4 py-7 text-center"><i class="far fa-trash-alt"></i></th>
  </tr>

    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr class="border-b border-indigo-400">
        <td class="px-4 py-3"> <%= link_to friend.first_name + ' ' + friend.last_name , friend %> </td>
        
        <td class="px-4 py-3"><%= friend.email %></td>
        <td class="px-4 py-3"><%= friend.phone %></td>
        <td class="px-4 py-3"><%= friend.instagrargm %></td>
        <%
=begin%>
 <td class="px-4 py-3 text-center"><%= friend.user_id %></td> 
<%
=end%>
        <td class="px-4 py-3 text-center"><%= link_to 'Mostrar', friend %></td>

        
        <td class="px-4 py-3 text-center"><%= link_to 'Editar', edit_friend_path(friend) %></td>
        <td class="px-4 py-3 text-center"><%= link_to 'Eliminar', friend, method: :delete, data: { confirm: 'Quiéres continuar?' } %></td>
        
      </tr>
    <% end %>

    <% end %>

</table>

<div class=" tableContainer text-2xl font-bold text-transparent md:text-3xl bg-clip-text bg-gradient-to-r from-indigo-200 via-indigo-500 to-indigo-900 mt-9 text-center"><%= link_to 'Crear nuevo contacto', new_friend_path %></div>
<% else %>
<div class="min-h-screen flex flex-col justify-center items-center">
  <div class="absolute w-60 h-60 rounded-xl bg-purple-300 -top-5 -left-16 z-0 transform rotate-45 hidden md:block"></div>
  <div class="absolute w-48 h-48 rounded-xl bg-purple-300 -bottom-6 -right-10 transform rotate-12 hidden md:block"></div>
      <h1 class="sm:text-5xl text-3xl font-extrabold sm:mb-4 text-gray-700">Agenda.Me</h1>
  <section class="w-full flex flex-col">
    <div class="container mx-auto flex flex-row sm:items-center xl:pb-16 xl:px-0 px-4">
      <div class="w-1/2 text-gray flex flex-col">
        <h2 class="sm:text-2xl text-base text-2xl mb-2">App web para tener a tus contactos de manera privada.</h2>
      </div>
        <div class="w-1/2 xl:pt-8 xl:items-center flex justify-end">
          <img class="xl:w-3/5" src="https://image.flaticon.com/icons/png/512/5406/5406665.png" alt="Agenda"/>
        </div>
    </div>
  </section>
<div class="w-40 h-40 absolute bg-purple-300 rounded-full top-0 right-12 hidden md:block"></div>
  <div class="w-20 h-40 absolute bg-purple-300 rounded-full bottom-20 left-10 transform rotate-45 hidden md:block"></div>
</div>
<% end %>

