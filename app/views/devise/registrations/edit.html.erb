<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center">
  <div class="py-20 px-40 bg-white rounded-2xl shadow-xl z-20">
    <div>
        <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Editar Cuenta <% resource_name.to_s.humanize %></h1>
      </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="space-y-4">
        <%= f.label :email, class:"hidden" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Esperando confirmación para: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="space-y-4">
        <%= f.label :password, class:"hidden" %> <i>(dejar en blanco si no se quiere cambiar)</i>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"Nueva contraseña", class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
        <% if @minimum_password_length %>
          
          <em><%= @minimum_password_length %> carácteres como mínimo</em>
        <% end %>
      </div>

      <div class="space-y-4">
        <%= f.label :password_confirmation, class:"hidden" %>  <br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Nueva contraseña", class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
      </div>

      <div class="space-y-4">
        <%= f.label :current_password, class:"hidden" %> <i>(Colocar la nuneva contraseña para confirmar los cambios)</i><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
      </div>


      <div class="text-center mt-6 mb-8">
        <button class="py-3 w-64 text-xl text-white bg-purple-400 rounded-2xl shadow-xl">
        <%= f.submit "Actualizar", class:"font-semibold text-white text-lg bg-purple-400 " %>
        </button>
      </div>
      


<% end %>

  <div class=" text-center">
  <%= link_to "Volver", :back, class:"p-4 hover:bg-purple-500 rounded-xl hover:text-white" %>
  

    <p><%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "Esta segur@?" }, method: :delete, class:"mt-8" %>
    </p>
  </div>
  </div>
</div>
