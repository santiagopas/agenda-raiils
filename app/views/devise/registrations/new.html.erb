<div class="min-h-screen bg-gray-100 flex flex-col justify-center items-center">
  <div class="py-20 px-40 bg-white rounded-2xl shadow-xl z-20">
    <div>
        <h1 class="text-3xl font-bold text-center mb-4 cursor-pointer">Registro
        </h1>
    </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class:"hidden" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"hidden" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> carácteres como mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Contraseña", class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class:"hidden" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Contraseña", class:"block text-sm py-3 px-4 rounded-lg w-full border outline-none" %>
  </div>

  <div class="text-center mt-6 mb-8">
    <button class="py-3 w-64 text-xl text-white bg-purple-400 rounded-2xl shadow-xl">
      <%= f.submit "Registro", class:"font-semibold text-white text-lg bg-purple-400 " %>
    </button>
  </div>
<% end %>

<%= render "devise/shared/links" %>  </div>
</div>